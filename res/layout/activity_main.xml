<com.example.dragviewextend.GragMoveView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp" >

    <LinearLayout
        android:id="@+id/view_one"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_one_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="View One" />

        <Button
            android:id="@+id/view_one_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="View One button" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/view_two"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#00ff00" >

        <Button
            android:id="@+id/view_two_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="View Two Button" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/view_three"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#0000ff" />

    <View
        android:id="@+id/view_four"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#00ffff" />

    <View
        android:id="@+id/view_five"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#ff00ff" />

    <View
        android:id="@+id/view_six"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffff00" />

</com.example.dragviewextend.GragMoveView>